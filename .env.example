# ============================================
# GAS MONITOR - КОНФИГУРАЦИЯ
# ============================================

# TELEGRAM (обязательно для алертов)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_PARSE_MODE=HTML
TELEGRAM_ENABLE_PHOTOS=true
TELEGRAM_TIMEOUT=10
ENABLE_ALERTS=true

# RPC ENDPOINTS (рекомендуется настроить хотя бы одну сеть)
# Ethereum
ETHEREUM_RPC_1=https://eth.llamarpc.com
ETHEREUM_RPC_2=https://ethereum.publicnode.com
ETHEREUM_RPC_3=https://rpc.flashbots.net
# ETHEREUM_RPC_3=https://mainnet.infura.io/v3/YOUR_KEY

# Arbitrum
ARBITRUM_RPC_1=https://arb1.arbitrum.io/rpc
ARBITRUM_RPC_2=https://arbitrum.publicnode.com
# ARBITRUM_RPC_3=https://arbitrum-mainnet.infura.io/v3/YOUR_KEY

# Optimism
OPTIMISM_RPC_1=https://mainnet.optimism.io
OPTIMISM_RPC_2=https://optimism.publicnode.com
# OPTIMISM_RPC_3=https://optimism-mainnet.infura.io/v3/YOUR_KEY

# Base
BASE_RPC_1=https://mainnet.base.org
BASE_RPC_2=https://base.publicnode.com
# BASE_RPC_3=https://base-mainnet.infura.io/v3/YOUR_KEY

# Polygon
POLYGON_RPC_1=https://polygon-rpc.com
POLYGON_RPC_2=https://polygon.publicnode.com
# POLYGON_RPC_3=https://polygon-mainnet.infura.io/v3/YOUR_KEY

# МОНИТОРИНГ
CHECK_INTERVAL=12
ALERT_COOLDOWN=300
FEE_HISTORY_BLOCKS=16
MAX_HISTORY_HOURS=24
SMOOTHING_WINDOW=5
SAVE_HISTORY_INTERVAL=300
ENABLE_NETWORK_STATS=true

# ГРАФИКИ
ENABLE_CHARTS=true
CHART_UPDATE_INTERVAL=3600
MAX_CHART_FILES=5
CHART_WIDTH=14
CHART_HEIGHT=8
CHART_DPI=150
CHART_FORMAT=png
CHART_DIRECTORY=charts

# L2 НАСТРОЙКИ
ARBITRUM_INCLUDE_L1_FEE=false
OPTIMISM_INCLUDE_L1_FEE=false
BASE_INCLUDE_L1_FEE=false
L1_FEE_CACHE_TTL=30
L1_GAS_PRICE_FALLBACK=20.0
L2_GAS_PRICE_FALLBACK=0.02

# СНАЙПЕР (ОПАСНО! Не включать без понимания)
ENABLE_SNIPER=false
SNIPER_DRY_RUN=true
SNIPER_REQUIRE_CONFIRMATION=true
SNIPER_CONFIRMATION_TTL=30
SNIPER_MAX_GAS_MULTIPLIER=1.2
SNIPER_MIN_PROFIT_GWEI=5.0
# SNIPER_PRIVATE_KEY= # НИКОГДА не храните здесь!

# ЛОГИРОВАНИЕ
LOG_LEVEL=INFO
LOG_FILE=logs/gas_monitor.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_CONSOLE=true

# ============================================
# КОНЕЦ КОНФИГУРАЦИИ
# ============================================
